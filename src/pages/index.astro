---
import Buttons from "../components/Buttons.astro";
import Section from "../components/Section.astro";

type AgeResponse = {
  age: number;
  nextBirthday: string;
};

type LastFmResponse = {
  success: boolean;
  tracks: {
    cover: string;
    album: string;
    artist: string;
    name: string;
    playCount: number;
    url: string;
  }[];
  artists: {
    image: string;
    name: string;
    playcount: number;
    url: string;
  }[];
};

const ageResponse: AgeResponse = await fetch(
  "https://age.astrid.sh/11/19/03"
).then((response) => response.json());

const lastFmResponse: LastFmResponse = await fetch(
  "https://lastfm.astrid.sh/"
).then((response) => response.json());

function truncate(str: string, maxLength: number) {
  if (str.length > maxLength) {
    return str.substring(0, maxLength - 3) + "...";
  }
  return str;
}
